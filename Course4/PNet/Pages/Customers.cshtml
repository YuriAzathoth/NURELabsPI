@page
@model PNetKR.Pages.CustomersModel
@{
    ViewData["Title"] = "Customers";
}

<h1>Customers</h1>

<form method="get">
    <div class="form-group">
        <div class="input-group">
            <input type="search" class="form-control" asp-for="SearchTerm" />
            <span class="input-group-btn">
                <button class="btn btn-primary">Search</button>
            </span>
        </div>
    </div>
</form>

<p>
    <a asp-page="/Customers/Edit" class="btn btn-primary">Create</a>
</p>

<table class="table table-hover">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">FirstName</th>
            <th scope="col">LastName</th>
            <th scope="col">Email</th>
            <th scope="col">Phone</th>
            <th scope="col" />
        </tr>
    </thead>
    <tbody>
        @foreach (var customer in Model.Customers)
        {
            <tr>
                <th scope="row">@customer.Id</th>
                <td>@customer.FirstName</td>
                <td>@customer.LastName</td>
                <td>@customer.Email</td>
                <td>@customer.Phone</td>
                <td>
                    <a class="btn btn-primary" asp-page="/Customers/Details" asp-route-Id="@customer.Id">Details</a>
                    <a class="btn btn-primary" asp-page="/Customers/Edit" asp-route-Id="@customer.Id">Edit</a>
                    <a class="btn btn-primary btn-danger" asp-page="/Customers/Delete" asp-route-Id="@customer.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
