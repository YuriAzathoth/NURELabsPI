@page
@model PNetKR.Pages.ProductsModel
@{
    ViewData["Title"] = "Products";
}

<h1>Products</h1>

<form method="get">
    <div class="form-group">
        <div class="input-group">
            <input type="search" class="form-control" asp-for="SearchTerm" />
            <span class="input-group-btn">
                <button class="btn btn-primary">Search</button>
            </span>
        </div>
    </div>
</form>

<p>
    <a asp-page="/Products/Edit" class="btn btn-primary">Create</a>
</p>

<table class="table table-hover">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Name</th>
            <th scope="col">Price</th>
            <th scope="col">Available</th>
            <th scope="col" />
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model.Products)
        {
            <tr>
                <th scope="row">@product.Id</th>
                <td>@product.Name</td>
                <td>@product.Price</td>
                <td>@product.Available</td>
                <td>
                    <a class="btn btn-primary" asp-page="/Products/Details" asp-route-Id="@product.Id">Details</a>
                    <a class="btn btn-primary" asp-page="/Products/Edit" asp-route-Id="@product.Id">Edit</a>
                    <a class="btn btn-primary btn-danger" asp-page="/Products/Delete" asp-route-Id="@product.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
