@page
@model PNetKR.Pages.Customers.OrdersModel
@{
    ViewData["Title"] = "Customer orders";
}

<h1>Orders</h1>

<p>
    <a asp-page="/Orders/Edit" class="btn btn-primary">Create</a>
</p>

<table class="table table-hover">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Product</th>
            <th scope="col">Customer</th>
            <th scope="col">Count</th>
            <th scope="col">Price</th>
            <th scope="col">Date</th>
            <th scope="col">Time</th>
            <th scope="col" />
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model.Orders)
        {
            <tr>
                <th scope="row">@order.Id</th>
                <td>@order.Product</td>
                <td>@order.Customer</td>
                <td>@order.Count</td>
                <td>@order.Price</td>
                <td>@order.Date</td>
                <td>@order.Time</td>
                <td>
                    <a class="btn btn-primary" asp-page="/Orders/Details" asp-route-Id="@order.Id">Details</a>
                    <a class="btn btn-primary" asp-page="/Orders/Edit" asp-route-Id="@order.Id">Edit</a>
                    <a class="btn btn-primary btn-danger" asp-page="/Orders/Delete" asp-route-Id="@order.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>