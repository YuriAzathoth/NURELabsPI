@page
@model PNetKR.Pages.Products.EditModel
@{
	ViewData["Title"] = "Create product";
}

<div class="row">
	<div class="col-md-4">
		<form method="post">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<div class="form-group">
				<label asp-for="Product.Name" class="control-label"></label>
				<input asp-for="Product.Name" class="form-control" />
				<span asp-validation-for="Product.Name" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Product.Price" class="control-label"></label>
				<input asp-for="Product.Price" class="form-control" asp-is-invariant="true" />
				<span asp-validation-for="Product.Price" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Product.Available" class="control-label"></label>
				<input asp-for="Product.Available" class="form-control" />
				<span asp-validation-for="Product.Available" class="text-danger"></span>
			</div>
			<div class="form-group">
				<input type="submit" value="Create" class="btn btn-primary" />
			</div>
		</form>
	</div>
</div>

<div>
	<a asp-page="/Products">Back to List</a>
</div>

@section Scripts
{
	@Html.RenderPartialAsync("_ValidationScriptsPartial");
}