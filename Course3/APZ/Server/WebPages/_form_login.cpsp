<main class="account-form">
	<div class="container">
		<div class="row justify-content-center">
			<div class="col-md-8">
				<div class="card">
					<div class="card">
						<div class="card-header"><%=l10n.Get("login-form.name")%></div>
						<div class="card-body">
							<form action="/user-login" method="post">
								<div class="form-group row">
									<label for="id-login" class="col-md-4 col-form-label text-md-right"><%=l10n.Get("login-form.login")%></label>
									<div class="col-md-6">
										<input type="text" id="id-login" class="form-control" name="login" required autofocus>
									</div>
								</div>
								<div class="form-group row">
									<label for="id-password" class="col-md-4 col-form-label text-md-right"><%=l10n.Get("login-form.password")%></label>
									<div class="col-md-6">
										<input type="password" id="id-password" class="form-control" name="pass" required>
									</div>
								</div>
								<%@ include file="_error_label.cpsp" %>
								<div class="col-md-6 offset-md-4">
									<button type="submit" class="btn btn-primary">
										<%=l10n.Get("login-form.submit")%>
									</button>
								</div>
							</form>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</main>